<h1>Your cart</h1>
<br>
<p>Your order:</p>

<p><%= @items.inspect %></p>

<table class="table table-bordered table-striped">
    <tr>
      <th>Product</th>
      <th>Number of items</th>
    </tr>
  <% @items.each do |x| %>
     <tr>
       <th><%= x[0].title %> Pizza</th>
       <td><%= x[1] %></td>
     </tr>
  <% end %>
  <tr>
    <td colspan="2"><b>Total: <%= @items.size %></b></td>
    <!--<td></td>-->
  </tr>
</table>
