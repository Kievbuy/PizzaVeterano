<h1 class="text-center">Greetings at our Pizza Veterano website!</h1>

<br>
<br>


  <div class="row">

    <% @products.each do |p| %>
      <div class="col-md-4">
        <div class="text-center" style="min-height: 150px;"><a href="<%= p.path_to_image %>"><img src="<%= p.path_to_image %>" alt="pizza pic" style="width: 80%;"></a></div>
        <table class="table table-striped table-bordered">
          <tr>
            <th><b>Title:</b></th>
            <td><b><%= p.title %></b></td>
          </tr>
          <tr>
            <td>Description:</td>
            <td><%= p.description %></td>
          </tr>
          <tr>
            <td>Size</td>
            <td><%= p.size %></td>
          </tr>
          <tr>
            <th><b>Price</b></th>
            <td><b><%= p.price %></b></td>
          </tr>
          <tr>
            <td colspan="2">
              <button class="btn btn-danger btn-block">Order now</button></td>
          </tr>


        </table>
      </div>
    <% end %>
  </div>


